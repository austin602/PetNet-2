<h2>{{ data.title }}</h2>

{{#if message.success}}
    <div class="success notice">
        <p>{{ message.success }}</p>
    </div>
{{/if}}



<form method="POST" enctype="application/x-www-form-urlencoded" action="/post/admin/{{ data.post.id }}">
    <input name="_method" type="hidden" value="{{ data.method }}">

    <input name="name" type="text" value="{{ data.post.name }}" placeholder="Name">
    <input name="author" type="text" value="{{ data.post.author }}" placeholder="Author">
    <textarea name="description" placeholder="Description">{{ data.post.description }}</textarea>

    <button type="submit">Save Post</button>
</form>
